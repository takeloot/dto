{
  "include": ["**/*"],
  "compilerOptions": {
    // check of JS files
    "allowJs": false,
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es6"],
    "moduleResolution": "node",
    "noEmit": false,
    "strict": true,
    "target": "esnext",
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}